<Window x:Class="CurrencyClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="371.555" Width="525">
    <Grid Margin="0,0,0.4,18.8">
        <Label x:Name="TitleLbl" Content="Currency Client" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="InputTbx" HorizontalAlignment="Left" Height="23" Margin="201,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ConvertFromKrToEuroBtn" Content="Convert from kr to euro" HorizontalAlignment="Left" Margin="49,97,0,0" VerticalAlignment="Top" Width="140" Click="ConvertFromKrToEuroBtn_Click"/>
        <Button x:Name="GetExchangeRateBtn" Content="Get exhange rate" HorizontalAlignment="Left" Margin="210,97,0,0" VerticalAlignment="Top" Width="100" Click="GetExchangeRateBtn_Click"/>
        <Button x:Name="GetCurrenciesBtn" Content="Get currencies" HorizontalAlignment="Left" Margin="349,97,0,0" VerticalAlignment="Top" Width="94" Click="GetCurrenciesBtn_Click"/>
        <Label x:Name="ResultLbl" Content="Result: " HorizontalAlignment="Left" Margin="231,130,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Height="161" Width="497"/>
    </Grid>
</Window>
